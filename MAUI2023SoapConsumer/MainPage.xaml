<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI2023SoapConsumer.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Entry x:Name="Number1" Placeholder="Número 1" />
            <Entry x:Name="Number2" Placeholder="Número 1" />
            <HorizontalStackLayout Spacing="10">
                <Button Clicked="Somar" Text="Somar" />
                <Button Clicked="Subtrair" Text="Subtrair" />
                <Button Clicked="Dividir" Text="Dividir" />
                <Button Clicked="Multiplicar" Text="Multiplicar" />
            </HorizontalStackLayout>
            <Label HorizontalTextAlignment="Center" Text="Resultado: " />
            <Label
                x:Name="LblResult"
                FontSize="48"
                HorizontalTextAlignment="Center"
                Text="0" />
            <ActivityIndicator x:Name="AILoading" IsRunning="False" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
